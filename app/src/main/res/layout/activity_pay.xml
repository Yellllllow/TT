<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include
        android:id="@+id/actionBar"
        layout="@layout/view_actionbar_default"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#eeeeee" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingBottom="9dp"
        android:paddingLeft="10dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@mipmap/user_icon_card"
        android:text="¥：0.01"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eeeeee"
        android:ellipsize="end"
        android:gravity="bottom"
        android:paddingBottom="9dp"
        android:paddingLeft="12dp"
        android:singleLine="true"
        android:text="请选择支付方式"
        android:textColor="#979797"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/rg_pay_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_pay_type_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:button="@null"
            android:checked="true"
            android:drawableRight="@drawable/checkbox_selector"
            android:paddingBottom="22dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:paddingTop="22dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/pay_zhifubao"
            android:text="支付宝支付"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:background="#cdcdcd"
            android:visibility="visible"
            android:layout_height="1px" />

        <RadioButton
            android:id="@+id/rb_pay_type_weixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:button="@null"
            android:drawableRight="@drawable/checkbox_selector"
            android:paddingBottom="22dp"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:paddingTop="22dp"
            android:text="微信支付"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/pay_weixin"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cdcdcd" />

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00000000" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/btn_red_rect_corners"
        android:elevation="2dp"
        android:enabled="true"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
