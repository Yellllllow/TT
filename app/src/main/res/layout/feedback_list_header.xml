<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="0.1dp" >

    <EditText
        android:id="@+id/et_feedback_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg_selector"
        android:gravity="left|top"
        android:hint="您的每一个宝贵的建议，都是我们不断进步的源泉!"
        android:maxLength="200"
        android:maxLines="9"
        android:minLines="5"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_commit_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/tv_content_size_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="还可以输入"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_content_size_left"
            android:singleLine="true"
            android:text="200"
            android:textColor="#00a0e9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_content_size_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_content_size"
            android:singleLine="true"
            android:text="字"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_commit_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/detail_btn_comment_commit_bg_selector"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="提交留言"
            android:textColor="#1a1a1a"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="25dp"
        android:background="#f5f5f5"
        android:gravity="left|center_vertical"
        android:paddingLeft="15dp"
        android:text="看看大家说什么"
        android:textColor="#666666"
        android:textSize="14sp" />

</LinearLayout>